<h1 class="display-1 d-inline">Cocka-taildy-doo!</h1>
<a href="/cocktails/new" class="btn btn-primary d-inline  float-right my-3">New Cocktail</a>


<div class="d-flex flex-wrap justify-content-between">
  <% @cocktails.each do |cocktail| %>
    <%= link_to cocktail_path(cocktail[:id]) do %>
      <div class="card my-3" style="width: 18rem;">
      <%= cl_image_tag cocktail.photo, height: 300, width: 400, crop: :fit %>

        <div class="card-body">
          <h5 class="card-title"><%= cocktail.name %></h5>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
